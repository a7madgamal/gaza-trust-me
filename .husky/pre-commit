#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Source environment to ensure PATH includes Python packages
if [ -f ~/.bashrc ]; then
  . ~/.bashrc
elif [ -f ~/.zshrc ]; then
  . ~/.zshrc
elif [ -f ~/.profile ]; then
  . ~/.profile
fi

# Run checks but exclude e2e tests to avoid HTML report server
npm run lint --workspaces
npm run type-check --workspaces
npm run lint:sql --workspace=@gazaconfirm/backend
npm run test --workspace=@gazaconfirm/backend
