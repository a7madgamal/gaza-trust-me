{
  "name": "gazaconfirm",
  "version": "1.0.0",
  "description": "Help-seeking platform with case management and verification system",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/e2e"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "lint:sql": "npm run lint:sql --workspace=@gazaconfirm/backend",
    "type-check": "npm run type-check --workspaces",
    "check": "concurrently --kill-others-on-fail --names \"FRMT,LINT,TYPE,TEST\" -c \"bgYellow.bold,bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"npm run format\" \"npm run lint\" \"npm run type-check\" \"npm run test\"",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "clean": "npm run clean --workspaces && rimraf node_modules packages/*/node_modules packages/*/dist packages/*/build"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "husky": "^8.0.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@9.0.0"
}
