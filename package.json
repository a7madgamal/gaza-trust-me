{
  "name": "gazaconfirm",
  "version": "1.0.0",
  "description": "Help-seeking platform with case management and verification system",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/e2e"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint . --fix --cache",
    "format": "npm run format --workspaces",
    "lint:sql": "npm run lint:sql --workspace=@gazaconfirm/backend",
    "type-check": "npm run type-check --workspaces",
    "check": "concurrently --kill-others-on-fail --names \"FRMT,LINT,TYPE,TEST\" -c \"bgYellow.bold,bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"npm run format\" \"npm run lint\" \"npm run type-check\" \"npm run test\"",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "db": "npm run db --workspace=@gazaconfirm/backend",
    "types:gen": "npm run types:gen --workspace=@gazaconfirm/backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build --progress=plain",
    "docker:prod:verbose": "docker-compose -f docker-compose.prod.yml build --progress=plain --no-cache",
    "clean": "npm run clean --workspaces && rimraf node_modules packages/*/node_modules packages/*/dist packages/*/build"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^9.2.0",
    "eslint": "9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-vibe-coder": "^0.0.5",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@9.0.0"
}
