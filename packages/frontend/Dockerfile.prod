# Frontend Dockerfile for Gazaconfirm Platform
# Note: This should be built from the project root with: docker build -f packages/frontend/Dockerfile .

FROM node:20-alpine AS base

# Generate backend types only (no full build)
FROM base AS types-generator
WORKDIR /app/packages/backend

# Install Supabase CLI for type generation
RUN apk add --no-cache curl && \
    curl -fsSL https://github.com/supabase/cli/releases/latest/download/supabase_linux_amd64.tar.gz | tar -xz && \
    mv supabase /usr/local/bin/supabase && \
    chmod +x /usr/local/bin/supabase

# Copy backend source and install dependencies
COPY packages/backend/package.json ./
RUN HUSKY=0 npm install --ignore-scripts

COPY packages/backend ./
# Copy env file and generate types
COPY packages/backend/.env-prod .env-prod
RUN set -a && . ./.env-prod && set +a && \
    echo "🔍 Verifying backend environment variables for type generation..." && \
    echo "Checking SUPABASE_ACCESS_TOKEN: ${SUPABASE_ACCESS_TOKEN:0:10}..." && \
    test -n "$SUPABASE_ACCESS_TOKEN" || (echo "❌ SUPABASE_ACCESS_TOKEN not set!" && exit 1) && \
    test -n "$SUPABASE_URL" || (echo "❌ SUPABASE_URL not set!" && exit 1) && \
    echo "✅ Backend environment variables verified for type generation!" && \
    npm run types:generate

# Build frontend
FROM base AS builder
WORKDIR /app

# Copy root package.json for workspace setup
COPY package.json ./

# Copy frontend source
COPY packages/frontend ./packages/frontend/

# Copy backend with generated types
COPY --from=types-generator /app/packages/backend ./packages/backend/

# Install workspace dependencies from root
RUN HUSKY=0 npm install --workspaces --ignore-scripts

# Build frontend
WORKDIR /app/packages/frontend

# Copy frontend env file and verify variables
COPY packages/frontend/.env-prod .env-prod
RUN set -a && . ./.env-prod && set +a && \
    echo "🔍 Verifying frontend environment variables..." && \
    test -n "$VITE_API_URL" || (echo "❌ VITE_API_URL not set!" && exit 1) && \
    test -n "$NODE_ENV" || (echo "❌ NODE_ENV not set!" && exit 1) && \
    echo "✅ Frontend environment variables verified successfully!"

# Set build-time environment variables for Vite
ARG VITE_API_URL=http://gazatrust.me:3001
ENV VITE_API_URL=$VITE_API_URL

RUN npm run build

# Production image with nginx
FROM nginx:alpine AS runner

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 frontend

# Copy built application
COPY --from=builder --chown=frontend:nodejs /app/packages/frontend/dist /usr/share/nginx/html

# Create nginx config for SPA routing
RUN echo 'server {' > /etc/nginx/conf.d/default.conf && \
    echo '    listen 80;' >> /etc/nginx/conf.d/default.conf && \
    echo '    server_name localhost;' >> /etc/nginx/conf.d/default.conf && \
    echo '    root /usr/share/nginx/html;' >> /etc/nginx/conf.d/default.conf && \
    echo '    index index.html;' >> /etc/nginx/conf.d/default.conf && \
    echo '    location / {' >> /etc/nginx/conf.d/default.conf && \
    echo '        try_files $uri $uri/ /index.html;' >> /etc/nginx/conf.d/default.conf && \
    echo '    }' >> /etc/nginx/conf.d/default.conf && \
    echo '    location /health {' >> /etc/nginx/conf.d/default.conf && \
    echo '        access_log off;' >> /etc/nginx/conf.d/default.conf && \
    echo '        return 200 "healthy\n";' >> /etc/nginx/conf.d/default.conf && \
    echo '        add_header Content-Type text/plain;' >> /etc/nginx/conf.d/default.conf && \
    echo '    }' >> /etc/nginx/conf.d/default.conf && \
    echo '}' >> /etc/nginx/conf.d/default.conf

EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost/health || exit 1

CMD ["nginx", "-g", "daemon off;"]