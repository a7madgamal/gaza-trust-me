{
  "name": "@gazatrustme/backend",
  "version": "1.0.0",
  "description": "Backend API server for GazaTrustMe platform",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts --watch src --ext ts,js,json --legacy-watch",
    "build": "tsc",
    "build:prod": "tsc",
    "start": "node dist/index.js",
    "format": "prettier --write . --log-level error",
    "type-check": "tsc --noEmit && echo 'BE Type check completed'",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist",
    "format:sql": "prettier --write \"supabase/**/*.sql\"",
    "format:sql:check": "prettier --check \"supabase/**/*.sql\"",
    "types:gen": "supabase gen types typescript --project-id sivaovkdxiluefuhlqoj --schema public > src/types/GENERATED_database.types.ts && prettier --write src/types/GENERATED_database.types.ts",
    "db": "tsx scripts/db-migrate.ts"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.8.0",
    "@supabase/supabase-js": "^2.54.0",
    "@trpc/server": "^10.45.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "multer": "^2.0.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^2.1.9",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prettier-plugin-sql": "^0.19.2",
    "rimraf": "^5.0.10",
    "tsx": "^4.20.3",
    "typescript": "5.9.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
