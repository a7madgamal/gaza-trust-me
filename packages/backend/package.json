{
  "name": "@gazaconfirm/backend",
  "version": "1.0.0",
  "description": "Backend API server for Gazaconfirm platform",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx kill-port 3001 && tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "prettier --write \"src/**/*.{ts,tsx,json}\" \"supabase/**/*.sql\" && eslint \"src/**/*.ts\" --fix",
    "lint:check": "prettier --check \"src/**/*.{ts,tsx,json}\" \"supabase/**/*.sql\" && eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist",
    "format:sql": "prettier --write \"supabase/**/*.sql\"",
    "format:sql:check": "prettier --check \"supabase/**/*.sql\"",
    "db:migrate": "supabase db push --db-url \"postgresql://postgres.sivaovkdxiluefuhlqoj:kQiJZS7OFUXE4S4I@aws-0-eu-central-1.pooler.supabase.com:6543/postgres\" --debug",
    "db:migrate:reset": "supabase db reset",
    "db:migrate:status": "supabase migration list",
    "db:create-migration": "supabase migration new"
  },
  "dependencies": {
    "@gazaconfirm/shared": "file:../shared",
    "@supabase/supabase-js": "^2.38.4",
    "@trpc/server": "^10.45.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^1.0.4",
    "cross-env": "^10.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-sql": "^0.19.2",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.2",
    "typescript": "5.3.3",
    "vitest": "^1.0.4"
  }
}
